{
	"files": [],
	"references": [
		{ "path": "./tsconfig.app.json" },
		{ "path": "./tsconfig.node.json" }
	],

	"compilerOptions": {
		"erasableSyntaxOnly": false,

		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@utils/*": ["src/utils/*"],
			"@assets/*": ["src/assets/*"],
			"@types/*": ["src/types/*"],
			"@hooks/*": ["src/hooks/*"],
			"@pages/*": ["src/pages/*"],
			"@services/*": ["src/services/*"],
			"@providers/*": ["src/providers/*"]
		}
	}
}
